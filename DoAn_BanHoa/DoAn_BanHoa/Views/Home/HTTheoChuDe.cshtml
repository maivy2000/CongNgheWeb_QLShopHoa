@{
    ViewBag.Title = "HTTheoChuDe";
    Layout = "~/Views/Share/TrangChuLayout.cshtml";
}
@using DoAn_BanHoa.Models;
@model List<HOA>
<h1 style="margin-top: 20px;text-align: center;"><span style="border-bottom: 2px solid #43768a;">@ViewBag.chuDe</span></h1>
<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-md-3 col-sm-3" style="margin-top: 8px;">
            <div class="card h-100 card text-white bg-light mb-3">
                <a href="@Url.Action("ChiTiet", "Home", new { mh = @item.MAHOA })">
                    <img src="~/Content/AlbumHoa/@item.ANH" width="100%" class="card-img-top" /></a>
                <div class="card-body" style="height: 100px">
                    <h4 class="card-title text-center" style="font-weight: bold; color: darkblue">@item.TENHOA</h4>
                </div>
                <div class="card-footer" style="color: #333; font-weight: bold; text-align: center; background-color: lightpink">
                    Giá: <span style="color: red; font-weight: bold">@string.Format("{0:0,0} VNĐ", @item.GIA)</span>
                    <a href="@Url.Action("ThemGioHang", "GioHang", new { @maHoa = @item.MAHOA, @strUrl = Request.Url.ToString() })">
                        <button style="float: right" class="btn btn-outline-dark" type="submit">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-basket3-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M5.757 1.071a.5.5 0 0 1 .172.686L3.383 6h9.234L10.07 1.757a.5.5 0 1 1 .858-.514L13.783 6H15.5a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H.5a.5.5 0 0 1-.5-.5v-1A.5.5 0 0 1 .5 6h1.717L5.07 1.243a.5.5 0 0 1 .686-.172z" />
                                <path d="M2.468 15.426L.943 9h14.114l-1.525 6.426a.75.75 0 0 1-.729.574H3.197a.75.75 0 0 1-.73-.574z" />
                            </svg>
                        </button>
                    </a>
                </div>

            </div>
        </div>
    }
</div>
