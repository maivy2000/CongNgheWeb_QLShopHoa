@model DoAn_BanHoa.Models.HOA

@{
    ViewBag.Title = "SuaSanPham1";
}

<h2>SuaSanPham1</h2>
<form action="/Product/SuaSanPham1" method="post">
    <div class="form-group row">
        <label class="col-md-2">Tên hoa:</label>
        <div class="col-md-10 ">
            <input type="text" name="@Model.TENHOA" value="@Model.TENHOA" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2">Mã loại:</label>
        <div class="col-md-10">@*@Html.DropDownList("MALOAI", (SelectList)ViewBag.loaiHoa, "Loại Hoa", new { @class = "form-control" })*@
            <input type="text" name="@Model.MALOAI" value="@Model.MALOAI" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2">Giá:</label>
        <div class="col-md-10 "><input type="text" value="@Model.GIA" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2">Mô tả:</label>
        <div class="col-md-10">
            <textarea name="MOTA" placeholder="Mô tả" class="form-control">@Model.MOTA</textarea>
        </div>

    </div>
    <div class="form-group row">
        <label class="col-md-2">Ảnh hoa:</label>
        <div class="col-md-10">
            <input type="file" name="fup" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2">Mã chủ đề:</label>
        <div class="col-md-10">@*@Html.DropDownList("MACHUDE", (SelectList)ViewBag.chuDe, "Chủ Đề", new { @class = "form-control" })*@
            <input value="@Model.MACHUDE" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-12 text-center">
            <input type="submit" value="Edit Product" class="btn btn-default" />
        </div>
    </div>
</form>
