@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Share/TrangChuLayout.cshtml";
}

<style>
    label {
        font-family: 'Quick sands', sans-serif;
        font-weight: bold;
        font-size: 14pt;
        margin-top: 18px;
    }

    input[type=text] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
        border: 1px solid #e51c71;
        -webkit-transition: 0.5s;
        transition: 0.5s;
        outline: none;
    }

        input[type=text]:focus {
            border: 3px solid #e51c71;
        }

    input[type=date] {
        width: 100%;
        padding: 12px 20px;
        /*margin: 8px 0;*/
        box-sizing: border-box;
        border: 1px solid #e51c71;
        -webkit-transition: 0.5s;
        transition: 0.5s;
        outline: none;
    }

        input[type=date]:focus {
            border: 3px solid #e51c71;
        }

    input[type=password] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
        border: 1px solid #e51c71;
        -webkit-transition: 0.5s;
        transition: 0.5s;
        outline: none;
    }

        input[type=password]:focus {
            border: 3px solid #e51c71;
        }
</style>
@model DoAn_BanHoa.Models.User
@using (Html.BeginForm("DangKy", "NguoiDung", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <h2 style="text-align: center; color: darkblue; font-weight: bold; margin-top: 10px;">ĐĂNG KÝ TÀI KHOẢN</h2>
    <form>
        <div class="form-group row">
            <label class="col-md-2">Họ và Tên:</label>
            <div class="col-md-10">
                <input type="text" name="txtHoTen" class="form-control" placeholder="Họ và Tên" />
                <p style="color:red;font-weight:bold">@ViewData["Loi1"]</p>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2">Tên Đăng Nhập:</label>
            <div class="col-md-10">
                <input type="text" name="txtTenDN" class="form-control" placeholder="Tên Đăng Nhập" />
                    <p style="color:red;font-weight:bold">@ViewBag.loi</p>
                    <p style="color:red;font-weight:bold">@ViewData["Loi2"]</p>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2">Mật khẩu:</label>
            <div class="col-md-10">
                <input type="password" name="txtMatKhau" class="form-control" placeholder="Mật khẩu" />
                <p style="color:red;font-weight:bold">@ViewData["Loi3"]</p>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2">Nhập lại MK:</label>
            <div class="col-md-10">
                <input type="password" name="txtReMatKhau" class="form-control" placeholder="Nhập lại mật khẩu" />
                <p style="color:red;font-weight:bold">@ViewData["Loi3"]</p>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2">SĐT:</label>
            <div class="col-md-10">
                <input type="text" name="txtDienThoai" class="form-control" placeholder="Số điện thoại" />
                <p style="color:red;font-weight:bold">@ViewData["Loi4"]</p>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2">Ngày Sinh:</label>
            <div class="col-md-10">
                <input type="date" name="txtNgaySinh" class="form-control" />
                <p style="color:red;font-weight:bold">@ViewBag.tb</p>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2">Email:</label>
            <div class="col-md-10">
                <input type="text" name="txtEmail" class="form-control" placeholder="Email" />

                    <p style="color:red;font-weight:bold">@ViewBag.email</p>

            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2">Địa chỉ:</label>
            <div class="col-md-10">
                <input type="text" name="txtDiaChi" class="form-control" placeholder="Địa chỉ" />
            </div>
        </div>
        <div class="text-center">
            <input type="submit" value="ĐĂNG KÝ" class="btn btn-danger" />
            @*<p style="color: red;">@ViewBag.loi</p>*@
        </div>@*
    </div>*@
    </form> 
}
